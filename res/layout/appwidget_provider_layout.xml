<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/appwidget_dark_bg"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical" android:padding="5dp" android:id="@+id/widgetLinearLayout">

      <TextView
          android:id="@+id/widgetServerTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Server Title" android:lines="1"/>

      <TextView
          android:id="@+id/widgetMOTD"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="MOTD" android:lines="1"/>

      <TextView
          android:id="@+id/widgetPlayerCount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="##/##" />

  </LinearLayout>
    

</FrameLayout>